<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:stretchColumns="*"
    android:orientation="horizontal">
    <TableRow android:paddingBottom="10dp"
        android:paddingTop="10dp">
        <TextView android:text="Scritto da: " android:layout_width="0dp" android:layout_height="wrap_content"
            android:textSize="12dip" android:textStyle="bold"
            android:layout_column="0"
            android:layout_weight="0"
            android:layout_span="0"
            android:layout_gravity="left" />
        <TextView android:text=" " android:layout_width="0dp" android:layout_height="wrap_content"
            android:textSize="12dip" android:textStyle="bold" android:id="@+id/feedEmail"
            android:layout_gravity="left" />
        <TextView android:text="Titolo: " android:layout_width="0dp" android:layout_height="wrap_content"
            android:textSize="12dip" android:textStyle="bold"
            android:layout_gravity="left" />
        <TextView android:text=" " android:layout_width="0dp" android:layout_height="wrap_content"
            android:textSize="12dip" android:textStyle="bold" android:id="@+id/feedTitle"
            android:layout_gravity="left" />
    </TableRow>
</TableLayout>